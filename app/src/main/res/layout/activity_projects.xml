<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.berkeley.hci.formation.ProjectsActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/content_projects" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/thumbnail_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D0D0D0"

        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:transcriptMode="alwaysScroll"
     />


    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="No Blocking to Show"
        android:gravity="center|center_vertical"

         />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_transition_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/formationPurple"
        android:tint="@color/colorAccent"
      />

    <TextView
        android:id="@+id/add_transition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="100dp"

        android:textColor="@color/black"
        android:background="#D5D8DC"
        android:text="Add Transition"
        android:visibility="invisible"


        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_blocking_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="146dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/formationPurple"
        android:tint="@color/colorAccent"

        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/add_blocking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:layout_marginRight="100dp"

        android:textColor="@color/black"
        android:background="#D5D8DC"
        android:visibility="invisible"
        android:text="Add Formation"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/show_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="28dp"
        android:backgroundTint="@color/formationPurple"
        android:tint="@color/colorAccent"
   />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="edu.berkeley.hci.formation.DancerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DancerFragment">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="edu.berkeley.hci.formation.DancerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".DancerFragment"
        tools:listitem="@layout/fragment_dancer" />

    <RelativeLayout
        android:id="@+id/no_dancers_view"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/no_dancers_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#C5C6C9"
            android:layout_marginLeft="180dp"
            android:background="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/no_dancers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_dancers"
            android:textAlignment="center"
            android:layout_below="@id/no_dancers_icon"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="263dp">

        <EditText
            android:id="@+id/comment_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/comment_publish_button"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/comment_publish_button"
            android:foregroundGravity="bottom"
            android:gravity="top"
            android:hint="insert a new comment"
            android:inputType="textShortMessage"
            android:textColor="@color/colorPrimaryDark"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/comment_publish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send_black_24dp"
            android:tint="@color/colorPrimaryDark" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>